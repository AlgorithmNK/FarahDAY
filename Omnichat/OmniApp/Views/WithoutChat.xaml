<UserControl x:Class="OmniApp.WithoutChat"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:OmniApp"
             mc:Ignorable="d" 
                      d:DesignHeight="520" d:DesignWidth="800">
    <Border Background="#b1c1e7" CornerRadius="40" Height="570">
        <Grid Height="570" VerticalAlignment="Bottom">
            <Grid.RowDefinitions>
                <RowDefinition Height="50"/>
                <RowDefinition Height="70"/>
                <RowDefinition/>
                <RowDefinition Height="120"/>
            </Grid.RowDefinitions>
            <Button x:Name="CloseButton" Width="150" HorizontalAlignment="Right"
                Background="#b1c1e7"
                Content="Закрыть X"
                FontSize="25" Click="CloseButton_Click">
            </Button>
            <Border Grid.Row="2">
                <Label Content="Выберите диалог из списка или настройте подключение" FontSize="20" HorizontalAlignment="Center" VerticalAlignment="Center"></Label>
            </Border>

        </Grid>
    </Border>
</UserControl>
